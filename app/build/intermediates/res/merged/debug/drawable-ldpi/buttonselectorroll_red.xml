            <gradient
                android:startColor="#ffff00"
                android:endColor="#ffff00"
                android:angle="270" />           
            <corners
                android:radius="5dp" />
        </shape>
    </item>
   <!-- focus -->
   <item android:state_focused="true" >
        <shape android:shape="oval">
            <gradient
                android:startColor="#ffff00"
                android:endColor="#ffff00"
                android:angle="270" />            
            <corners
                android:radius="5dp" />
        </shape>
    </item>
<!-- default -->
    <item>        
        <shape android:shape="oval">
            <gradient
                android:startColor="#ff0000"
                android:endColor="#ff0000"
                android:angle="0" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>
