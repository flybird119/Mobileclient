<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="设置"
    android:background="#F5F5F5" >
	<RelativeLayout 
	     android:id="@+id/layout_setting"        
         android:background="#FFFFFF"
         android:layout_width="match_parent" 
    	 android:layout_height="wrap_content" 
    	 android:padding="12dip">
    		
         <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:layout_alignParentLeft="true"
    			android:gravity="center">
		  
               <ImageView 
                   android:id="@+id/imv_setting_return"
                   android:layout_width="35dip"
                   android:layout_height="35dip"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/ic_back_u"
                   android:padding="2dip"
                   android:clickable="true"
                   android:scaleType="fitXY"/>
               
                <TextView
                    android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:layout_marginLeft="10dip"
    				android:textSize="18sp"
    				android:textColor="#4D4D4D"
    				android:text="设置"/>
               
            </LinearLayout>  
                 
        </RelativeLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/layout_setting"
	    android:orientation="vertical" >
      
          <LinearLayout 
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 
	    	android:layout_marginTop="@dimen/setting_margin_top"            
            android:background="@drawable/mysetting">
             <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:text="ip地址："
             />
             <EditText
             android:id="@+id/eit_setting_ipaddress"
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:background="@null"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:layout_marginRight="@dimen/setting_margin_right"
             android:hint="如：192.168.1.1"
             />
         </LinearLayout>
  
          <LinearLayout 
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 	    	
            android:background="@drawable/mysetting"
            >
             <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:text="IP端口："
             />
             <EditText
             android:id="@+id/eit_setting_ipport"
             android:layout_width="fill_parent"
              android:layout_height="50dp"
             android:background="@null"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:layout_marginRight="@dimen/setting_margin_right"
             android:numeric="integer"
             android:hint="如：8888"
             />
         </LinearLayout>
         <LinearLayout 
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 
	    	android:layout_marginTop="@dimen/setting_margin_top"    
            android:background="@drawable/mysetting">
                
             <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:text="温度阈值："
             />
              <EditText
             android:id="@+id/eit_setting_temperature"
             android:layout_width="fill_parent"
              android:layout_height="50dp"
             android:background="@null"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
              android:layout_marginRight="@dimen/setting_margin_right"
              android:numeric="integer"
             android:hint="输入0~100"
             />
         </LinearLayout>
         <LinearLayout 
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 
	    	android:background="@drawable/mysetting"
             >
             <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:text="湿度阈值："
             />
              <EditText
             android:id="@+id/eit_setting_moist"
             android:layout_width="fill_parent"
              android:layout_height="50dp"
             android:background="@null"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
              android:layout_marginRight="@dimen/setting_margin_right"
              android:numeric="integer"
             android:hint="输入0~120"
             />
         </LinearLayout>
         <LinearLayout 
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 
	    	android:background="@drawable/mysetting"
             >
             <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:text="光强阈值："
             />
             <EditText
             android:id="@+id/eit_setting_sun"
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:background="@null"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginLeft="@dimen/setting_margin_left"
             android:layout_marginRight="@dimen/setting_margin_right"
             android:numeric="integer"
             android:hint="输入0~120"
             />
         </LinearLayout>
        
         
         <Button 
             android:background="@drawable/buttonselector"
             android:id="@+id/btn_setting_set"
             android:layout_marginTop="50dp"
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:textSize="20sp"
             android:textColor="#ffffff"
             
             android:text="保存数据"
             />
	</LinearLayout>
</RelativeLayout>
