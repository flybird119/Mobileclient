<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yqman.mobileclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--  -->
        <activity   
            android:name="com.yqman.mobileclient.Homepage"           
            
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.yqman.service.WiFiSupportService" />
		<activity      
            android:name="com.yqman.mobileclient.Startui"
            android:label="@string/title_activity_startui"       
            android:theme="@android:style/Theme.Black.NoTitleBar" 
            android:screenOrientation="portrait"   
            >
        </activity>
        <activity
            android:name="com.yqman.mobileclient.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.yqman.mobileclient.Setting"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.yqman.mobileclient.Detailmessage"
            android:label="@string/title_activity_detailmessage"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        
    </application>

</manifest>
