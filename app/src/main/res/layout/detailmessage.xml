<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="当前状态" 
    android:background="#F5F5F5">
    <RelativeLayout 
	     android:id="@+id/layout_detailmessage"        
         android:background="#FFFFFF"
         android:layout_width="match_parent" 
    	 android:layout_height="wrap_content" 
    	 android:padding="12dip">
    		
         <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:layout_alignParentLeft="true"
    			android:gravity="center">
		  
               <ImageView 
                   android:id="@+id/imv_setting_return"
                   android:layout_width="35dip"
                   android:layout_height="35dip"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/ic_launcher"
                   android:padding="2dip"
                   android:clickable="true"
                   android:scaleType="fitXY"/>
               
                <TextView
                    android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:layout_marginLeft="10dip"
    				android:textSize="18sp"
    				android:textColor="#4D4D4D"
    				android:text="状态"/>
               
            </LinearLayout>  
                 
        </RelativeLayout>
 <RadioGroup 
    android:layout_below="@+id/layout_detailmessage"
    android:id="@+id/radiogroup_history"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="radiogroup"
    
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:background="#ffffff">
    <RadioButton 
        android:layout_marginLeft="20dp"
        android:id="@+id/rib_historyradiobutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="现有数据"
      />
    <RadioButton 
        android:id="@+id/rib_historyradiobutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="历史数据"
        />
</RadioGroup>
<RadioGroup 
    android:layout_below="@+id/radiogroup_history"
    android:id="@+id/radiogroup_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="radiogroup"
    
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:background="#ffffff">
    <RadioButton 
        android:layout_marginLeft="20dp"
        android:id="@+id/rib_Mainradiobutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="一号农场"
      />
    <RadioButton 
        android:id="@+id/rib_Mainradiobutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="二号农场"
        />
</RadioGroup>

<RadioGroup 
    android:id="@+id/radiogroup_sub"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="radiogroup"
   
    android:orientation="horizontal"
    android:layout_below="@id/radiogroup_main"
    android:layout_marginTop="20dp"
    android:background="#ffffff">
    <RadioButton 
        android:layout_marginLeft="20dp"  
        android:id="@+id/rib_subradiobutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="橘园"
      />
    <RadioButton 
        android:id="@+id/rib_subradiobutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="桃园"
        />
    <RadioButton 
        android:id="@+id/rib_subradiobutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
    	android:text="梅园"
        />
</RadioGroup>
<LinearLayout 
    android:id="@+id/layout_detail_show"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/radiogroup_sub"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    >
    <TextView 
    android:id="@+id/txt_detail_showsun"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:layout_marginLeft="20dp"
    android:textColor="#0000ff"
    android:text="光强:"
    android:layout_weight="1"
    />
    <TextView 
    android:id="@+id/txt_detail_showtemp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:layout_marginLeft="10dp"
    android:textColor="#ff0000"
    android:text="温度:"
    android:layout_weight="1"
    />
    <TextView 
    android:id="@+id/txt_detail_showmoist"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:layout_marginLeft="10dp"
    android:textColor="#000000"
    android:text="湿度:"
    android:layout_weight="1"
    />
    
</LinearLayout>

 <SurfaceView
        android:id="@+id/wb_surfaceView1"
      	android:layout_width="fill_parent"
        android:layout_height="420px"
        android:layout_below="@+id/layout_detail_show"
        android:layout_marginTop="20dp"
       
        />
    <!--  android:layout_width="650px"
        android:layout_height="420px" -->

<Button 
    android:id="@+id/btn_detail_read"
    android:layout_width="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="50dp"
    android:layout_below="@id/wb_surfaceView1"
    android:layout_marginTop="20dp"
    android:background="@drawable/buttonselector"
    android:text="读取数据"
    android:textColor="#ffffff"
    />

</RelativeLayout>
